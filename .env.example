# Server
PORT=3000
NODE_ENV=development

# CORS (comma-separated list of origins or * for all)
CORS_ORIGIN=*

# OpenAI / GPT
OPENAI_API_KEY=
GPT_MODEL=gpt-4o-mini
# Option A) Single line with \n escapes (leave empty to use file below)
GPT_SYSTEM_PROMPT=

# Option B) Load from a file (preferred for multi-line)
# Use the consolidated 5-stage CBT-I prompt
GPT_SYSTEM_PROMPT_FILE=prompts/cbti_system_prompt_all_in_one.md

# OpenAI TTS (Audio API)
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy
OPENAI_TTS_FORMAT=mp3

